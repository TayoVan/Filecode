import java.io.*;
import java.util.Scanner;

public class Main {
    private static final String FILE_NAME = "abobafile.txt";

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        boolean running = true;

        while (running) {
            System.out.println("\n\nМеню:");
            System.out.println("1. Записати до файлу");
            System.out.println("2. Прочитати весь вміст файлу");
            System.out.println("3. Вийти з редактора");
            System.out.print("Ваш вибір: ");

            int choice = scanner.nextInt();
            scanner.nextLine();

            switch (choice) {
                case 1:
                    writeMultipleLinesToFile(scanner);
                    break;
                case 2:
                    readFile();
                    break;
                case 3:
                    running = false;
                    System.out.println("Редактор закрито.");
                    break;
                default:
                    System.out.println("Неправильний вибір, спробуйте ще раз.");
            }
        }

        scanner.close();
    }

    private static void writeMultipleLinesToFile(Scanner scanner) {
        FileWriter writer = null;
        try {
            writer = new FileWriter(FILE_NAME, true);
            System.out.println("Введіть текст (натисніть Enter для нового рядка, порожній ввід для завершення):");

            while (true) {
                String line = scanner.nextLine();
                if (line.isEmpty()) {
                    break;
                }
                writer.write(line + "\n");
            }
            System.out.println("Текст успішно додано до файлу.");
        } catch (IOException e) {
            System.err.println("Помилка запису у файл: " + e.getMessage());
        } finally {
            if (writer != null) {
                try {
                    writer.close();
                } catch (IOException e) {
                    System.err.println("Помилка закриття файлу: " + e.getMessage());
                }
            }
        }
    }

    private static void readFile() {
        FileReader reader = null;
        try {
            reader = new FileReader(FILE_NAME);
            int ch;
            System.out.println("\n\nВміст файлу:");
            while ((ch = reader.read()) != -1) {
                System.out.print((char) ch);
            }
            System.out.println();
        } catch (FileNotFoundException e) {
            System.err.println("Файл ще не створено.");
        } catch (IOException e) {
            System.err.println("Помилка читання файлу: " + e.getMessage());
        } finally {
            if (reader != null) {
                try {
                    reader.close();
                } catch (IOException e) {
                    System.err.println("Помилка закриття файлу: " + e.getMessage());
                }
            }
        }
    }
}
